<h1>Listing students</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Joined at</th>
    <th>Rank</th>
    <th>Decided</th>
    <th>Belt size</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= student.joined_at %></td>
    <td><%= student.rank %></td>
    <td><%= student.decided %></td>
    <td><%= student.belt_size %></td>
    <td><%= link_to 'Show', student %></td>
    <td><%= link_to 'Edit', edit_student_path(student) %></td>
    <td><%= link_to 'Destroy', student, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

